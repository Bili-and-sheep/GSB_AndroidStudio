<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/nom_prenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom PrÃ©nom"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/email_praticien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email@exemple.com"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visites :"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_visites"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_nouvelle_visite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nouvelle visite" />
</LinearLayout>