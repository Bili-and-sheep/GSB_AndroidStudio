<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5EBFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/logo_gsb"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/gsb"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="40dp"
            android:contentDescription="Logo GSB" />

        <EditText
            android:id="@+id/editTextMainEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:backgroundTint="#C94AE2"
            android:text="jean.dupont@example.com"
            android:drawableLeft="@android:drawable/ic_dialog_email"
            android:padding="12dp" />

        <EditText
            android:id="@+id/editTextMainPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mot de passe"
            android:inputType="textPassword"
            android:backgroundTint="#C94AE2"
            android:text="securePassword123"
            android:drawableLeft="@android:drawable/ic_lock_idle_lock"
            android:padding="12dp"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/GSBButton"
            android:text="Se connecter"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>