<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gsb_background"
    android:padding="24dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textViewBienvenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenue sur GSB !"
            android:textColor="@color/gsb_text_dark"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewPraticiens"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            />

        <Button
            android:id="@+id/btn_praticiens"
            style="@style/GSBButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Créer un nouveau praticien"
            />

        <Button
            android:id="@+id/btn_logout"
            style="@style/GSBButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Se déconnecter"
             />

    </LinearLayout>
</ScrollView>